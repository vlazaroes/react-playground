# Editor configuration, see https://editorconfig.org
root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
max_line_length = 100

[*.json]
insert_final_newline = false
max_line_length = off

[*.md]
trim_trailing_whitespace = false
insert_final_newline = false
max_line_length = off
